# ========================================
# API KEYS - Can be configured in 2 ways:
# 1. Via Web UI (recommended) - Configure in browser at http://localhost:3000
# 2. Via this .env file (optional fallback)
# ========================================

# Alpaca (Stocks) - Get at: https://alpaca.markets
# Sign up for free paper trading account
ALPACA_API_KEY=your_alpaca_key_here
ALPACA_SECRET_KEY=your_alpaca_secret_here
ALPACA_PAPER=true

# Kraken (Crypto) - Get at: https://www.kraken.com → Settings → API
# Permissions needed: Query Funds, Query Open/Closed Orders, Create & Modify Orders
KRAKEN_API_KEY=your_kraken_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_here

# Server Configuration
PORT=3000

# Bot Settings
CAPITAL_INICIAL=5000
LUCRO_MAXIMO_DIARIO=500
PERDA_MAXIMA_DIARIA=200
AGRESSIVIDADE=70

# Position Limits
MAX_POSICOES_TOTAL=5
MAX_POSICOES_STOCKS=3
MAX_POSICOES_CRYPTO=3

# Risk Management
STOP_LOSS_PERCENT=2
TAKE_PROFIT_PERCENT=4

# Strategy Parameters
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70

# Scanning Interval (milliseconds)
SCAN_INTERVAL=60000
